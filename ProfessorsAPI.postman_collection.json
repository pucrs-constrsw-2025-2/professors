		{
			"name": "Professors",
			"description": "Endpoints para o CRUD principal de Professores",
			"item": [
				{
					"name": "Create a new professor",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Dr. Test\",\n  \"registration_number\": 12345,\n  \"institucional_email\": \"test@pucrs.br\",\n  \"status\": \"active\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								""
							]
						},
						"description": "Cria um novo professor. Exemplo de body baseado em `tests/adapters/api/test_professors.py`."
					},
					"response": []
				},
				{
					"name": "Search professors (with Filters)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/?name=Dr.&status=active",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								""
							],
							"query": [
								{
									"key": "name",
									"value": "Dr.",
									"description": "Filtrar por nome (parcial)"
								},
								{
									"key": "status",
									"value": "active",
									"description": "Filtrar por status (exato)"
								}
							]
						},
						"description": "Busca professores com base em critérios (filtros)."
					},
					"response": []
				},
				{
					"name": "Search professors (List All)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								""
							]
						},
						"description": "Busca todos os professores (sem filtros)."
					},
					"response": []
				},
				{
					"name": "Search for a specific professor",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}"
							]
						},
						"description": "Busca um professor específico pelo seu id (UUID)."
					},
					"response": []
				},
				{
					"name": "Update a specific professor",
					"request": {
						"method": "PUT",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Updated Name\",\n  \"registration_number\": 12346,\n  \"institucional_email\": \"updated@pucrs.br\",\n  \"status\": \"inactive\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}"
							]
						},
						"description": "Atualiza um professor (substituição completa - PUT). Exemplo de body baseado em `tests/adapters/api/test_professors.py`."
					},
					"response": []
				},
				{
					"name": "Delete a specific professor",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}"
							]
						},
						"description": "Deleta um professor específico."
					},
					"response": []
				}
			]
		},
		{
			"name": "Graduations",
