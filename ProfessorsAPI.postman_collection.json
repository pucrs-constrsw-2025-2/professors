					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"degree\": \"Mestrado\",\n  \"course\": \"Engenharia de Software\",\n  \"institution_name\": \"PUCRS\",\n  \"year\": 2025\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}/graduations/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}",
								"graduations",
								""
							]
						},
						"description": "Cria uma nova graduação para um professor específico. Exemplo de body baseado em `tests/adapters/api/test_graduations.py`."
					},
					"response": []
				},
				{
					"name": "Listar graduações de um professor específico",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}/graduations/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}",
								"graduations",
								""
							]
						},
						"description": "Lista todas as graduações de um professor específico."
					},
					"response": []
				},
				{
					"name": "Atualizar uma graduação",
					"request": {
						"method": "PUT",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"degree\": \"Doutorado\",\n  \"course\": \"Ciência da Computação\",\n  \"institution_name\": \"PUCRS\",\n  \"year\": 2028\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}/graduations/{{graduation_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}",
								"graduations",
								"{{graduation_id}}"
							]
						},
						"description": "Atualiza uma graduação (requer `professor_id` no path para validação)."
					},
					"response": []
				},
				{
					"name": "Excluir uma graduação",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}/graduations/{{graduation_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}",
								"graduations",
								"{{graduation_id}}"
							]
						},
						"description": "Exclui uma graduação (requer `professor_id` no path para validação)."
					},
					"response": []
				},
				{
					"name": "Listar todas as graduações do sistema",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/graduations/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"graduations",
								""
							]
						},
						"description": "Lista todas as graduações cadastradas no sistema, independentemente do professor."
					},
					"response": []
				}
			]
		},
		{
			"name": "Classes",
			"description": "Endpoints para associar Professores a Turmas (Classes)",
			"item": [
				{
					"name": "List all classes for a specific professor",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}/classes/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}",
								"classes",
								""
							]
						},
						"description": "Lista todas as classes associadas a um professor."
					},
					"response": []
				},
				{
					"name": "Associate a professor with a class",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"class_id\": \"{{class_id}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}/classes/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}",
								"classes",
								""
							]
						},
						"description": "Associa um professor a uma classe. O body é baseado em `adapters/api/schemas/class_schemas.py`."
					},
					"response": []
				},
				{
					"name": "Disassociate a professor from a class",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/professors/{{professor_id}}/classes/{{class_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"professors",
								"{{professor_id}}",
								"classes",
								"{{class_id}}"
							]
						},
						"description": "Desassocia um professor de uma classe."
					},
					"response": []
				}
			]
		}
